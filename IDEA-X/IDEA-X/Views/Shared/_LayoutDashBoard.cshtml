

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/dashboard_css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", false)
</head>
<body class="body-background">
    <div class="nav navbar-inverse navbar-fixed-top ">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="@Url.Action("Timeline","User")" class="navbar-left" style="text-decoration:none">
                    <img src="~/image/ideax.svg" alt="Idea X logo" class="img-rounded" width="60px" height="60px" />
                    <b class="text-muted">IDEA-X</b>
                </a>


            </div>

            <ul class="nav navbar-nav navbar-right">

                <li>
                    
                    <a href="@Url.Action("Profile","User")">
                        Welcome <b style="padding-right:20px;">@Session["UNAME"]</b>

                        @{ var imgUrl = Url.Action("GetImage", "User", new { name = Session["UNAME"] });}
                         <img src="@imgUrl" title="Profile" class="img-circle hover-profile"
                                 width="30px" height="30px" />
                       


                   

                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Logout","User")" style="pointer-events:none">
                        <i class="fa-2x fa-solid fa-arrow-right-from-bracket logout" title="Logout"></i>

                    </a>
                </li>

            </ul>

        </div>
    </div>

    <div class="container-fluid body-content">
        <div class="row">
            <div class="col-sm-2 side-nav-content side-nav-layout">

                <div class="list-group">
                    <a class="list-group-item" href="@Url.Action("Timeline","User")">

                        <span class="row-no-gutters">
                            <span class="col-sm-1">
                                <i class="fa fa-house">
                                </i>
                            </span>
                            <span class="col-sm-offset-1">
                                Timeline
                            </span>
                        </span>


                    </a>

                    <a class="list-group-item" href="@Url.Action("Chat","User")">
                        <span class="row-no-gutters">
                            <span class="col-sm-1">
                                <i class="fa-solid fa-message">
                                </i>
                            </span>
                            <span class="col-sm-offset-1">
                                Chat
                            </span>
                        </span>
                    </a>
                    <a class="list-group-item" href="@Url.Action("Profile","User")">
                        <span class="row-no-gutters">
                            <span class="col-sm-1">
                                <i class="fa-solid fa-user">
                                </i>
                            </span>
                            <span class="col-sm-offset-1">
                                Profile
                            </span>
                        </span>
                    </a>
                    <a class="list-group-item" href="@Url.Action("IdeaTracker","User")">
                        <span class="row-no-gutters">
                            <span class="col-sm-1">
                                <i class="fa-solid fa-dragon">
                                </i>
                            </span>
                            <span class="col-sm-offset-1">
                                IDEA Tracker
                            </span>
                        </span>
                    </a>
                </div>
                <div class="footer">

                    <div style="display:flex;align-items:center;">

                        <span>
                            <img src="~/image/ideax.svg" alt="idea x logo" class="img-rounded" width="40px" height="40px" />
                        </span>

                        <b>IDEA-X</b>

                    </div>
                    <div>
                        <span class="text-center">
                            &copy; Copyright @DateTime.Now.Year
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-sm-10">

                @RenderBody()


            </div>

        </div>

    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/timeline")
    @RenderSection("scripts", required: false)
</body>
</html>
